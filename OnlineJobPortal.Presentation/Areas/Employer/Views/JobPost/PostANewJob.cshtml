<style>
    .step {
        height: 35px !important;
        width: 35px !important;
        text-align: center;
        vertical-align: middle;
        color: #fff;
        padding: 5px;
        font-size: 13px;
        background-color: #9f9d9d;
        outline: none;
        border-radius: 50%;
        display: inline-block;
    }

    .active-step {
        background-color: #fff;
        color: #000;
        border: 2px solid #000;
    }

    .active-step+span {
        font-weight: 700;
    }

    .vertical-line {
        margin-left: 8px;
        border-left: 5px solid #ccc;
        height: 100%;
    }


    .stepper {
        height: 250px;
    }
    
    @@media(max-width:768px) {
        .vertical-line {
            display: none;
        }

        .stepper {
            height: 100%;
        }
    }


    .step-title {
        cursor: pointer;
    }

    .divider {
        margin-top: .5rem;
        margin-bottom: 0;
        width: calc(100% - 1rem);
    }

    form .form-label {
        color: #444 !important;
        font-weight: 500;
    }

    form .form-select {
        color: #5d6778
    }

    .active-tab {
        display: flex !important;
    }

    .text-editor {
        min-height: 40vh;
    }

    .ck-editor__editable[role="textbox"] {
        /* editing area */
        min-height: 200px;
    }

    .range-method,
    .about-method {
        display: none;
    }
</style>

