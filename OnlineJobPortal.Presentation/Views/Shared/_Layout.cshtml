<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ITJobs - Online Job Portal</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- Libraries Stylesheet -->
    <link href="./lib/animate/animate.min.css" rel="stylesheet">
    <link href="./lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/HomePage/custom.css" rel="stylesheet" />
    <link href="~/css/HomePage/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-xxl bg-white p-0">
        <header>
            <div class="container-xxl bg-white p-0">
                <!-- Spinner Start -->
                <div id="spinner"
                     class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
                    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <!-- Spinner End -->
                <!-- Navbar Start -->
                <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
                    <a href="index.html" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5 ">
                        <h1 class="m-0 text-primary glow">IT<span class="text-dark">Jobs</span></h1>
                    </a>
                    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse"
                            data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav ms-auto p-4 p-lg-0">
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link active" data-bs-toggle="dropdown">Việc làm IT</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fas fa-search"></i>Tìm việc làm</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <hr class="dropdown-divider">
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span>
                                            <i class="icon fa-solid fa-table-list"></i>Danh sách việc làm
                                            <span class="badge badge__new">NEW</span>
                                        </span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span>
                                            <i class="icon fa-solid fa-check-to-slot"></i>Việc làm phù hợp
                                            <span class="badge badge__hot">HOT</span>
                                        </span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <hr class="dropdown-divider">
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span>
                                            <i class="icon fa-solid fa-graduation-cap"></i>
                                            <span class="flashing">Việc làm IT Fresher</span>
                                            <span class="badge badge__hot">HOT</span>
                                        </span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link" data-bs-toggle="dropdown">Hồ sơ & CV</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fa-solid fa-file-pen"></i>Mẫu CV</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <hr class="dropdown-divider">
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span><i class="icon fa-regular fa-file-lines"></i>Mẫu Cover Letter</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link" data-bs-toggle="dropdown">Công ty</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fa-regular fa-building"></i>Danh sách công ty</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <hr class="dropdown-divider">
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span><i class="icon fa-solid fa-ranking-star"></i>Top công ty</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <a href="contact.html" class="nav-item nav-link">Blog IT</a>
                            <a href="contact.html" class="nav-item nav-link">Liên hệ</a>
                        </div>
                        @if (User!.Identity!.IsAuthenticated)
                        {
                            <a href="contact.html" class="nav-item nav-link noti-icon"><i class="fas fa-bell"></i></a>
                            <a href="contact.html" class="nav-item nav-link noti-icon"><i class="fas fa-comments"></i></a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link profile-area" role="button" data-bs-toggle="dropdown" aria-expanded="false">@ViewBag.FullName</a>
                                <div class="dropdown-menu dropdown-menu-end rounded-0 m-0" data-bs-popper="none" style="max-width: 280px">
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fa-solid fa-gear"></i>Cập nhật hồ sơ</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fa-solid fa-eye"></i>Lịch sử ứng tuyển</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <a href="job-list.html" class="dropdown-item">
                                        <span><i class="icon fas fa-lock"></i>Đổi mật khẩu</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                    <hr class="dropdown-divider">
                                    <a href="job-detail.html" class="dropdown-item">
                                        <span class="text-danger"><i class="icon fa-solid fa-right-from-bracket"></i>Đăng xuất</span>
                                        <i class="fas fa-arrow-right arrow-right"></i>
                                    </a>
                                </div>
                            </div>

                        }
                        else
                        {
                            <a href="/login" class="btn btn-outline-primary">Đăng nhập</a>
                            <a href="/register" class="btn btn-primary">Đăng ký</a>
                            <a href="" class="btn btn-dark">Đăng tuyển & Tìm hồ sơ</a>
                        }
                    </div>
                </nav>
            </div>
                <!-- Navbar End -->
        </header>

        @RenderBody()

        <footer class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-white mb-4">Danh mục</h5>
                        <a class="btn btn-link text-white-50" href="">Giới thiệu</a>
                        <a class="btn btn-link text-white-50" href="">Liên hệ</a>
                        <a class="btn btn-link text-white-50" href="">Dịch vụ</a>
                        <a class="btn btn-link text-white-50" href="">Privacy Policy</a>
                        <a class="btn btn-link text-white-50" href="">Terms & Condition</a>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-white mb-4">Liên hệ</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Đại học Cần Thơ</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>0776573853</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>dungb19066040@gmail.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-white mb-4">Bản tin</h5>
                        <p>Để lại thông tin liên lạc với chúng tôi</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text"
                                   placeholder="Địa chỉ Email">
                            <button type="button"
                                    class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">
                                Đăng ký
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; Huỳnh Chí Dũng B1906640
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <div class="footer-menu">
                                <a href="">Trang chủ</a>
                                <a href="">Cookies</a>
                                <a href="">Help</a>
                                <a href="">FQAs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./lib/wow/wow.min.js"></script>
    <script src="./lib/easing/easing.min.js"></script>
    <script src="./lib/waypoints/waypoints.min.js"></script>
    <script src="./lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/HomePage/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
