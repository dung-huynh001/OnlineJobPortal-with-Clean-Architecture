@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-0">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/img/carousel-1.jpg" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
                style="background: rgba(43, 57, 64, .5);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-10 col-lg-8">
                            <h1 class="display-3 text-white animated slideInDown mb-4">
                                <span class="text-primary glow">IT<span class="text-dark">Jobs</span></span> gợi ý
                                công việc phù hợp nhất
                            </h1>
                            <p class="fs-3 fw-medium text-white">
                                Kết nối ứng viên và nhà tuyển dụng, là nơi ứng viên có thể kiếm công việc
                                phù hợp nhất với bản thân
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/img/carousel-2.jpg" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center"
                style="background: rgba(43, 57, 64, .5);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-10 col-lg-8">
                            <h1 class="display-3 text-white animated slideInDown mb-4">
                                <span class="text-primary glow">IT<span class="text-dark">Jobs</span></span> gợi ý
                                ứng viên phù hợp với yêu cầu
                            </h1>
                            <p class="fs-3 fw-medium text-white">
                                Là nơi cung cấp nguồn nhân lực dồi
                                dào cho các công ty IT trên cả nước
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <div class="row g-2">
            <div class="col-md-10">
                <div class="row g-2">
                    <div class="col-md-3">
                        <input type="text" class="form-control border-0" placeholder="Tìm theo từ khóa"
                            id="search-job" />
                    </div>
                    <div class="col-md-3">
                        <select class="form-select border-0 form-control" id="exp-selector">
                            <option style="display:none"><i class="fa-regular fa-star"></i> Kinh nghiệm</option>
                            <option value="7">Tất cả</option>
                            <option value="1">Intern</option>
                            <option value="2">Fresher</option>
                            <option value="3">Junior</option>
                            <option value="4">Middle</option>
                            <option value="5">Senior</option>
                            <option value="6">Expert</option>
                            <option value="0">Không yêu cầu</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select border-0 form-control" id="local-selector">
                            <option style="display:none"><i class="fa-regular fa-star"></i>Địa điểm</option>
                            <option value="0">Tất cả</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select border-0" id="salary-selector">
                            <option style="display:none"><i class="fa-regular fa-star"></i>Mức lương</option>
                            <option value="0">Tất cả</option>
                            <option value="1">Dưới 10 triệu</option>
                            <option value="2">10 - 15 triệu</option>
                            <option value="3">15 - 20 triệu</option>
                            <option value="4">20 - 25 triệu</option>
                            <option value="5">Trên 25 triệu</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <button class="btn btn-dark border-0 w-100">Tìm kiếm</button>
            </div>
        </div>
    </div>
</div>
<!-- Search End -->
<!-- Category Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Khám phá theo danh mục</h1>
        <div class="row g-4 mb-4 job-type-list">
            <div class="d-flex justify-content-center align-items-center">
                <img src="./img/no-result-found.jpg" alt="" style="width: 350px; " />
            </div>

        </div>
        <div class="d-flex justify-content-center wow fadeInUp" data-wow-delay=".2s">
            <a role="button" class="btn btn-primary py-3 px-5 btn-see-more" data-area-type="jobType">Xem thêm</a>
        </div>
    </div>
</div>
<!-- Category End -->
<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="row g-0 about-bg rounded overflow-hidden">
                    <div class="col-6 text-start">
                        <img class="img-fluid w-100" src="~/img/about-1.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid" src="~/img/about-2.jpg" style="width: 85%; margin-top: 15%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid" src="~/img/about-3.jpg" style="width: 85%;">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid w-100" src="~/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <h1 class="mb-4">Tìm Hiểu Về Cơ Hội Nghề Nghiệp Công Nghệ Thông Tin</h1>
                <p class="mb-4">
                    Nghề nghiệp trong lĩnh vực Công nghệ thông tin không chỉ đánh vào sự sáng tạo mà
                    còn yêu cầu kiến thức chuyên sâu và kỹ năng thực tế. Chúng tôi tạo ra một môi trường nơi bạn
                    có thể tìm hiểu về những định hướng công việc, từ phát triển phần mềm đến quản trị hệ thống,
                    và tạo dựng kế hoạch cho sự nghiệp của bạn.
                </p>
                <p>
                    <i class="fa fa-check text-primary me-3"></i>Nơi Kết nối Những Tài năng Công nghệ thông tin
                </p>
                <p><i class="fa fa-check text-primary me-3"></i>Khám Phá Các Vị trí IT Hấp dẫn</p>
                <p>
                    <i class="fa fa-check text-primary me-3"></i>Nơi Hội tụ Các Chuyên gia Công nghệ thông tin
                </p>
                <a class="btn btn-primary py-3 px-5 mt-3" href="">Xem thêm</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Jobs Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Danh sách việc làm</h1>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-between w-50 border-bottom mb-4">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active filter-btn" data-sort="all"
                        data-bs-toggle="pill" href="#tab-1">
                        <h6 class="mt-n1 mb-0">Tất cả</h6>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 pb-3 filter-btn" data-sort="fulltime"
                        data-bs-toggle="pill" href="#tab-1">
                        <h6 class="mt-n1 mb-0">Full Time</h6>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn" data-sort="parttime"
                        data-bs-toggle="pill" href="#tab-1">
                        <h6 class="mt-n1 mb-0">Part Time</h6>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn" data-sort="remote"
                        data-bs-toggle="pill" href="#tab-1">
                        <h6 class="mt-n1 mb-0">Remote</h6>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn" data-sort="freelancer"
                        data-bs-toggle="pill" href="#tab-1">
                        <h6 class="mt-n1 mb-0">Freelancer</h6>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="spinner-border text-primary spinner" style="display: none" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="job-list" style="min-height: 350px;">

                        <div class="d-flex justify-content-center align-items-center">
                            <img src="./img/no-result-found.jpg" alt="" style="width: 350px; " />
                        </div>
                    </div>
                    <a role="button" class="btn btn-primary py-3 px-5" id="btn-seeMore">Xem thêm việc làm</a>
                </div>
            </div>
        </div>
    </div>
</div>
