<link href="~/area/assets/plugins/chosen/chosen.min.css" rel="stylesheet">

<!-- Header End -->
<div class="container-fluid py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h2 class="display-3 text-white mb-3 animated slideInDown text-uppercase">Tìm kiếm việc làm</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Tìm kiếm việc làm</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header End -->
<div class="container-fluid py-0">
    <div class="container">
        <!-- Category Start -->
        <div class="container-fluid py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Khám phá theo danh mục</h1>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="spinner-border text-primary spinner" style="display: none" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div class="row g-4 mb-4 job-type-list">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="../img/no-result-found.jpg" alt="" style="width: 350px; " />
                    </div>

                </div>
                <div class="d-flex justify-content-center wow fadeInUp" data-wow-delay=".2s">
                    <a role="button" class="btn btn-primary py-3 px-5 btn-see-more" data-area-type="jobType">Xem
                        thêm</a>
                </div>
            </div>
        </div>
        <!-- Category End -->
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Danh sách việc làm</h1>
        <!-- Search Start -->
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
            <div class="container">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-3">
                                <input type="text" class="form-control border-0" placeholder="Tìm theo từ khóa"
                                    id="search-job" />
                            </div>
                            <div class="col-md-3">
                                <select class="form-select border-0" id="exp-selector">
                                    <option style="display:none" value="">Kinh nghiệm</option>
                                    <option value="7">Tất cả</option>
                                    <option value="1">Intern</option>
                                    <option value="2">Fresher</option>
                                    <option value="3">Junior</option>
                                    <option value="4">Middle</option>
                                    <option value="5">Senior</option>
                                    <option value="6">Expert</option>
                                    <option value="0">Không yêu cầu</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select ls_province" style="height: 36px;"></select>
                                <select class="form-select ls_district" hidden></select>
                                <select class="form-select ls_ward" hidden></select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select border-0" id="salary-selector">
                                    <option style="display:none"><i class="fa-regular fa-star"></i>Mức lương</option>
                                    <option value="0">Tất cả</option>
                                    <option value="1">Dưới 10 triệu</option>
                                    <option value="2">10 - 15 triệu</option>
                                    <option value="3">15 - 20 triệu</option>
                                    <option value="4">20 - 25 triệu</option>
                                    <option value="5">Trên 25 triệu</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-dark border-0 w-100" id="btn-find">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Search End -->
        <!-- Jobs Start -->
        <div class="container-fluid py-5">
            <div class="container">
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
                    <ul class="nav nav-pills d-inline-flex justify-content-between w-75 border-bottom mb-4">
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active filter-btn"
                                data-sort="all" data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Tất cả</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 pb-3 filter-btn" data-sort="fulltime"
                                data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Full Time</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn"
                                data-sort="parttime" data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Part Time</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn" data-sort="remote"
                                data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Remote</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 me-0 pb-3 filter-btn"
                                data-sort="freelancer" data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Freelancer</h6>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="spinner-border text-primary spinner" style="display: none" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <div class="job-list" style="min-height: 350px;">

                                <div class="d-flex justify-content-center align-items-center">
                                    <img src="~/img/no-result-found.jpg" alt="" style="width: 350px; " />
                                </div>
                            </div>
                            <a role="button" class="btn btn-primary py-3 px-5" id="btn-seeMore">Xem thêm việc làm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jobs End -->
    </div>
</div>

